class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int n=nums.size();
         int maxSum = nums[0];  // Initialize to first element
    int currentSum = nums[0];
    
    for (int i = 1; i < nums.size(); i++) {
        currentSum = max(nums[i], currentSum + nums[i]);  // Include or start new subarray
        maxSum = max(maxSum, currentSum);  // Update global max
    }
    
    return maxSum;

    }
};
